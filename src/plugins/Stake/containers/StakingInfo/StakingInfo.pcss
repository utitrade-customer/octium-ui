#staking-info {
	background-color: var(--thin-blue);
	border-radius: 10px;
	box-shadow: 0 4px 8px -2px rgba(0, 0, 0, 0.15);
	padding: 40px;
	position: relative;

	#event {
		.event-image {
			margin-right: 20px;

			img {
				max-height: 64px;
				max-width: 64px;
			}
		}

		.event-info {
			display: flex;
			flex-direction: column;

			&__name {
				color: var(--system-text-black-color);
				font-size: 2rem;
			}

			&__description {
				color: var(--system-text-black-color);
				font-size: 1rem;
			}
		}
	}

	.buttons {
		display: flex;
		flex-direction: column;

		.trade-btn,
		.view-detail-btn {
			border: none;
			border-radius: 40px;
			color: var(--system-text-black-color);
			cursor: pointer;
			font-size: 14px;
			font-weight: 700;
			margin-bottom: 8px;
			outline: none;
			padding: 10px 20px;
			transition: background-color 0.2s;
		}

		.trade-btn {
			background-color: var(--blue);
			border: 1px solid var(--blue);
			color: var(--system-text-white-color);
		}

		.view-detail-btn {
			background-color: var(--bold-blue);
			color: var(--system-text-white-color);
		}
	}

	.loading-spin {
		background-color: var(--order-header-color);
		content: '';
		height: 100%;
		left: 0;
		position: absolute;
		top: 0;
		width: 100%;
	}
}
